{% layout "layout.liquid" %}
{% block content %}
<div class="form-container">
    <h1>New Post</h1>
    <form action="/" method="post">
        <fieldset>
            <label>
                Title: <input type="text" name="title" placeholder="Title" required />
            </label>
            <label>
                Body: <textarea name="content" placeholder="Your content here"></textarea>
            </label>
        </fieldset>
        <input type="submit" id="new-submit" value="Submit" />
    </form>
</div>
{% endblock %}