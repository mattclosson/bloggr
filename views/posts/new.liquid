{% layout "layout.liquid" %}
{% block content %}
    <h1>New Post</h1>
    <form action="/post" method="POST">
        <fieldset>
            <label>
                Title: <input type="text" name="title" placeholder="Title" required />
            </label>
            <label>
                Author: <input type="text" name="author" placeholder="Title" />
            </label>
            <label>
                Body: <textarea name="content" placeholder="Your content here"></textarea>
            </label>
        </fieldset>
        <input type="submit" value="Submit" />
    </form>
{% endblock %}