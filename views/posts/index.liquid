{% assign new_button = 'anything' %}
{% layout "layout.liquid" %}
{% block content %}
    {% for post in posts %}
        <div class="post-container">
            <a href="/posts/{{post.slug}}"><h1>{{post.title}}</h1></a>
            <p>{{post.author}}</p>
            <p>{{post.sanitizedHtml}}</p>
        </div>
    {% endfor %}
{% endblock %}